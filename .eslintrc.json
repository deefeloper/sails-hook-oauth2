{
  "globals": {
    "sails": true,
    "describe": true,
    "it": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "testHelpers": true,
    "assert": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "object-curly-spacing": ["error", "always"],
    "no-param-reassign": ["error"]
  }
}
